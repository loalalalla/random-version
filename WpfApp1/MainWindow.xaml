<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
        <Button Content="Сгенерировать случайное число" Click="GenerateRandomNumber_Click" Height="50" Width="250"  VerticalAlignment="Center" Padding="5" Margin="0 100 5 0" />
        <TextBlock x:Name="randomNumberText" Text="Случайное число будет отображаться здесь" HorizontalAlignment="Center" FontSize="16" Height="80"  VerticalAlignment="Center" Padding="5" Margin="0 56 5 0"/>
        </StackPanel>
    </Grid>
</Window>
